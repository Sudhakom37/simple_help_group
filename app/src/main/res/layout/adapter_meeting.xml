<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_meeting"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:orientation="horizontal">
<ImageView android:id="@+id/iv_meeting_date"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_meeting_date"
    android:layout_gravity="center|start"
    android:layout_marginStart="32dp"
    android:padding="4dp"

    />
        <TextView
            android:id="@+id/tv_meeting_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1.9"
            android:textSize="15sp"
            android:textColor="@color/sky_blue"
            android:gravity="start|center"
            android:text="meeting1" />


        <ImageView android:id="@+id/iv_user"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_user_24dp"
            android:layout_gravity="center|start"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/tv_user_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_weight=".45"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:text="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey" />
</LinearLayout>