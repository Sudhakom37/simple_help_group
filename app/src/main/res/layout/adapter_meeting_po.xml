<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    >
    <LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="150dp"
    android:layout_weight="1.3"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    >
    <TextView
        android:id="@+id/tv_meeting_date"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Meeting Date :"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_meeting_date_value"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="September 08 to 12 2019 "
        android:gravity="start"
        />
    <TextView
        android:id="@+id/tv_no_attendees"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Number of Attendees 5"
        android:gravity="center"
        android:textColor="@color/white"

        android:background="@drawable/dashboard_gradient_background"
        />

</LinearLayout>
   <ImageView
       android:id="@+id/iv_group_image"
       android:layout_width="0dp"
       android:layout_height="150dp"
       android:layout_weight="1"
       android:padding="8dp"
       android:layout_margin="16dp"
       android:src="@drawable/ph_meeting_group_photo"
       />

</LinearLayout>
</androidx.cardview.widget.CardView>