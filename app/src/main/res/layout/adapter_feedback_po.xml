<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    >
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >
            <TextView
                android:id="@+id/tv_meeting_date"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Meeting Date"
                android:gravity="center|bottom"
                />
            <TextView
                android:id="@+id/tv_meeting_date_value"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="September 08 to 12 2019 "
                android:gravity="start"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_group_image"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:src="@drawable/ph_meeting_group_photo"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Number of Feedback's"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"

            android:background="@drawable/feedback_list_vo_gradient"
            />
        <TextView
            android:id="@+id/tv_no_feedback"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="5"
            android:gravity="center"
            android:layout_weight=".2"
            android:textColor="@color/white"
            android:background="@color/colorGrey"
            />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight=".8"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_audio_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_video_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>