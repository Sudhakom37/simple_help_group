<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/shg_toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meeting Travelled Distance"
        android:padding="16dp"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/color_light_grey"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView android:id="@+id/tv_meeting_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ameerpet to Madhapur"
                android:paddingStart="16dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance: "
                    android:paddingStart="16dp"
                    />
                <TextView android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(339h 49m)"
                    android:textColor="@color/red"

                    />
                <TextView android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 5Km"
                    />
            </LinearLayout>
            <TextView android:id="@+id/tv_meeting_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date 20-16-2019 9:30 pm"
                android:textColor="@color/red"
                android:padding="16dp"
                />
    <WebView android:id="@+id/web_root_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>