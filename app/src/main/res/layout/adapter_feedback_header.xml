<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:elevation="4dp"
    app:cardElevation="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_feedback_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FeedBack Name"
        android:visibility="gone"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_feedback_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio Feedback"
        android:layout_margin="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_feedback_audio"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/feedback_audio_spectrum"
            />

        <TextView
            android:id="@+id/tv_feedback_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="3rd oct 10:41 AM"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_feedback_duration"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="3 Min"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/iv_feedback_microphone"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:src="@drawable/ic_audio_icon"
            />

    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>